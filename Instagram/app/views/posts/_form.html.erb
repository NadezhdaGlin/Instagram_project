<%= form_with model: post do |form| %>

<div>
	<%= form.file_field :image %>
</div>

<div>
  <strong><p>	<%= form.label "add description"%> </p><strong>

	<p>	<%= form.text_area :description%>	</p>

	<% post.errors.full_messages_for(:description).each do |message| %>
		<div><%= message %></div>
	<% end %>
</div>

<div>	<%= form.submit "CREATE POST"%></div>

<strong>
	<h3>
	  <%= link_to "BACK", post%>	
	</h3>
</strong>

<% end %>

