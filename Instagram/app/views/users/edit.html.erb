<h1> Edit Profile </h1>

<div>
	<%= image_tag(current_user.image_url(:thumb)) if current_user.image?%>
</div>

<%= form_with model: current_user do |form|%>
<div>
	<%= form.file_field :image%>
</div>


<div>
	<strong>
		<%= form.label "Name" %> 
		<%= form.text_area :name%>	
	</strong>
</div>

<div>
	<p>
		<strong>
			<%= form.label "Bio" %> 
			<%= form.text_area :about%>	
		</strong>
	</p>
</div>

<div>
    <%= form.submit %>
</div>

<% end %>
<p>
	<%= link_to "Back", current_user%>
</p>