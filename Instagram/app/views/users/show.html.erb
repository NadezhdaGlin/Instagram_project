<p>
	<%= link_to "Posts", posts_path%>
</p>

<div>
	<%= image_tag(@user.image_url(:thumb)) if current_user.image?%>
	<strong>
		<% @user ||= current_user %>
		<%= link_to "Following #{@user.following.count}", following_user_path(@user)%> 
		<%= link_to "Followers #{@user.followers.count}", followers_user_path(@user)%>
		Posts <%= @user.posts.count%>
	</strong>
</div>

<p>
	<strong>
   	<%= @user.name%>
	</strong>
</p>

<p>
	<%= @user.about%>
</p>

<strong>
	<% if user_signed_in? && @user == current_user%>
		<%= link_to "Edit Profile", edit_user_path%>
		<%= link_to "Add new post", new_post_path %>
	<%end%>
</strong>

<p>
	<% @user.posts.each do |user| %>
			<%= image_tag(user.image_url(:thumb)) if user.image?%>
	<%end%>
</p>
<%= render 'follow_form' if user_signed_in? && @user!=current_user %>

